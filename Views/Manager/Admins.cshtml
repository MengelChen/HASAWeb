@model List<HASAWeb.Models.Admin>

@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Manager/Manager_Layout.cshtml";
}

<h2>管理员</h2>

<p>
    @Html.ActionLink("新建", "AdminCreate")
</p>
<div id="blank" style="width:100%; height:50px;"></div>
<table class="table" border="0">
    <tr>
        <th>
            用户名
        </th>
        <th>
            姓名
        </th>
        <th>
            权限
        </th>
        <th>
            注册时间
        </th>
        <th>
            上次登录时间
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Power)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastLogin)
            </td>
            <td>
                @Html.ActionLink("Details", "AdminDetails", new { id = item.AdminId }) |
                @Html.ActionLink("Delete", "AdminDelete", new { id = item.AdminId })
            </td>
        </tr>
    }

</table>
