@{
    Layout = "Manager_Layout.cshtml";
}

@model List<HASAWeb.Models.Article>

@{
    ViewBag.Title = "Articles";
    Layout = "~/Views/Manager/Manager_Layout.cshtml";
}

<h2>文章</h2>

<p>
    @Html.ActionLink("新建", "ArticleCreate")
</p>
<div id="blank" style="width:100%; height:50px;"></div>
<table class="table" border="0">
    <tr>
        <th>标题</th>
        <th>点击</th>
        <th>作者</th>
        <th>发布时间</th>
        <th>修改时间</th>
        <th>过期时间</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviseTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiredTime)
            </td>
            <td>
                @Html.ActionLink("Edit", "ArticleEdit", new { id = item.ArticleId }) |
                @Html.ActionLink("Details", "ArticleDetails", new { id = item.ArticleId }) |
                @Html.ActionLink("Delete", "ArticleDelete", new { id = item.ArticleId })
            </td>
        </tr>
    }

</table>
